<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="90dp"
            android:layout_height="91dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_app_icon" />
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recipeNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Apple Pie" />
            <TextView
                android:id="@+id/missingIngredientTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing ingredients: " />
            <TextView
                android:id="@+id/missingIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/missingIngredientTitle"
                app:layout_constraintTop_toBottomOf="@id/recipeNameTextView"
                tools:text="potatoes, potatoes, potatoes" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right|top"
            android:layout_marginLeft="6dp">
            <Button
                android:id="@+id/openBrowserButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:text="Open in Browser"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:layout_gravity="right"
                android:drawablePadding="-7sp"
                android:drawableLeft="@android:drawable/ic_menu_set_as" />

            <Button
                android:id="@+id/saveRecipeButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:text="Save Recipe"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:layout_gravity="right"
                android:drawablePadding="-7sp"
                android:drawableLeft="@drawable/ic_add_white_24dp" />
            <Button
                android:id="@+id/deleteRecipeButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:text="Remove"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:layout_gravity="right"
                android:drawablePadding="-7sp"
                android:drawableLeft="@drawable/ic_delete_white_24dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
